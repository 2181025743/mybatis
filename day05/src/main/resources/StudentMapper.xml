<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yx.mapper.StudentMapper">
    <update id="update" parameterType="student">
        update student
        <!-- set name= #{name},
     age=#{age},
     gender=#{gender} -->
        <!--        <set>-->
        <!--            <if test="name != null and name !=''">-->
        <!--                name = #{name},-->
        <!--            </if>-->
        <!--            <if test="age != 0 and age !=''">-->
        <!--                age= #{age},-->
        <!--            </if>-->
        <!--            <if test="gender != null and gender !=''">-->
        <!--                gender = #{gender},-->
        <!--            </if>-->
        <!--        </set>-->
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="age != null and age != 0">
                age = #{age},
            </if>
            <if test="gender != null and gender != ''">
                gender = #{gender},
            </if>
        </trim>
        where id = #{id}
    </update>
    <delete id="deleteList" parameterType="list">
        delete from student
        where id in
        <foreach collection="list" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="selectByCondition" resultType="Student" parameterType="Student">
        SELECT * FROM student
        WHERE 1=1
        <choose>
            <when test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </when>
            <when test="age != null and age != 0">
                AND age = #{age}
            </when>
            <when test="gender != null and gender != ''">
                AND gender = #{gender}
            </when>
            <otherwise>
                ORDER BY age
            </otherwise>
        </choose>
    </select>
    <select id="selectByConditionTrim" resultType="Student" parameterType="Student">
        select * from student
        <trim prefix="where" prefixOverrides="and" suffix="order by age">
            <choose>
                <when test="name != null and name != ''">
                    AND name LIKE CONCAT('%', #{name}, '%')
                </when>
                <when test="age != null and age != 0">
                    AND age = #{age}
                </when>
                <when test="gender != null and gender != ''">
                    AND gender = #{gender}
                </when>
                <otherwise>
                    ORDER BY age
                </otherwise>
            </choose>
        </trim>
    </select>

</mapper>
