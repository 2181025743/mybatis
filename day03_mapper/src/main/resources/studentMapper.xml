<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yx.mapper.StudentMapper">
    <insert id="insert" parameterType="com.yx.model.Student">
        insert into student
        values (null, #{name}, #{age}, #{gender})
    </insert>
    <update id="update" parameterType="com.yx.model.Student">
        update student
        set name=#{name},
            age=#{age},
            gender=#{gender}
        where id = #{id}
    </update>
    <delete id="delete" parameterType="int">
        delete
        from student
        where id = #{id}
    </delete>
    <select id="selectList" resultType="com.yx.model.Student">
        select *
        from student
    </select>
    <select id="selectId" parameterType="int" resultType="com.yx.model.Student">
        select *
        from student
        where id = #{id}
    </select>

    <select id="selectByCondition" parameterType="com.yx.model.Student" resultType="com.yx.model.Student">
        select *
        from student
        where gender = #{gender}
          and age > #{age}
    </select>
</mapper>